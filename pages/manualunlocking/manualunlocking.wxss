.register-container {
  padding: 20px;
  display: flex;
}

form {
  width: 100%;
}

.section {
  display: flex;
  margin-top: 50px
}

.picker {
  padding: 0 0 0 10px;
}

.country {
  display: flex;
  font-size: 12px;
  border: 1px solid #ddd;
  width: 70px;
  height: 30px;
  line-height: 30px;
}

.triangle {
  width: 8px;
  height: 6px;
}

.phone {
  flex: 1;
  margin-left: -1px;
}

.verification {
  flex: 1;
  margin: 00px 0;
}

.input {
  border: none solid #ddd;
  font-size: 16px;
  padding: 0 10px;
  line-height: 30px;
  height: 30px;
}

.input-placeholder {
  color: #aaa!important;
}

.verification-btn {
  color: #777!important;
  height: 32px;
  font-size: 16px;
  margin: 6px 8px 0px 10px;
}

.btn-hover {
  background-color: #eee!important;
}

.next-btn {
  margin: 20px 0;
  border: 1px solid #238BFE!important;
  background-color:#238BFE;
  color: #FCFEFE!important;
  width: 100%;

}
